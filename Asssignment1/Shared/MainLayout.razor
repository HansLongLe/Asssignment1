@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <div class="main">
        <div class="top-row px-4">
            @if (!buttonPressed)
            {
                <a href="" @onclick="pressingButton">Login</a>
            }
            
            @if (buttonPressed)
            {
                <LoginComponent/>   
            }
           
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>

@code
{
    private Boolean buttonPressed = false;

    public void pressingButton()
    {
        buttonPressed = true;
    }
}
